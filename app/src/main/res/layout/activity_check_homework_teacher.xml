<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/state_bar"
        layout="@layout/view_status_bar" />

    <RelativeLayout
        android:id="@+id/rlCheckHomeWork"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_header_bar_height"
        android:background="@color/white">

        <ImageView
            android:id="@+id/ivCheckHomeWorkBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/common_padding"
            android:paddingRight="@dimen/common_padding"
            android:src="@drawable/icon_back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCheckHomeWorkTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/text_xdt"
                android:textSize="@dimen/text_large_size"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivCheckHomeWorkSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:padding="10dp"
            android:src="@mipmap/menu_menubar"
            android:visibility="visible" />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/common_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCheckHomeWorkContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="80岁老教授站着为本科生讲课：坐着对学生不尊重"
                android:textColor="@color/text_xdt"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civCheckHomeWorkTeacherIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/yukee" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCheckHomeWorkTeacherName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="张可(班主任+语文老师)"
                        android:textColor="@color/text_xdt"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvCheckHomeWorkStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="2019-06-24 18:30"
                        android:textColor="@color/text_xdt_hint"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvCheckHomeWorkType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_background_corner_blue_fill"
                    android:paddingStart="6dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="6dp"
                    android:paddingBottom="4dp"
                    android:text="课后实践"
                    android:textColor="@color/login_xdt_btn_color_able"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvCheckHomeWorkStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@color/xdt_background"
                    android:paddingStart="6dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="6dp"
                    android:paddingBottom="4dp"
                    android:text="已结束"
                    android:textColor="@color/text_xdt_hint"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvCheckHomeWorkEndTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="截止时间：2019-06-25 12:30"
                    android:textColor="@color/text_xdt_hint" />
            </LinearLayout>

            <com.kotlin.baselibrary.custom.MoreTextView
                android:id="@+id/checkHomeWorkMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/con_txt_shade"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                app:moreSwitchDrawable="@drawable/con_txt_down_arrow"
                app:moreSwitchTextColor="#007AFF"
                app:moreSwitchTextSize="14sp"
                app:moreTextColor="@color/text_xdt"
                app:moreTextSize="@dimen/sp_16" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvCheckHomeWorkPic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@color/xdt_background"/>

            <android.support.design.widget.TabLayout
                android:id="@+id/tabCheckHomeWork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:tabIndicatorColor="@color/login_xdt_btn_color_able"
                app:tabSelectedTextColor="@color/login_xdt_btn_color_able"
                app:tabTextColor="@color/text_xdt_hint" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvCommitHomeWork"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <Button
        android:id="@+id/btRemind"
        android:layout_width="match_parent"
        android:layout_height="@dimen/blue_button_height"
        android:background="@drawable/house_blue_press_btn"
        android:gravity="center"
        android:text="一键提醒"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_margin="16dp"/>
</LinearLayout>