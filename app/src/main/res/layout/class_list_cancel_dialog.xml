<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_background_corner"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp">
        
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请确认是否撤回申请加入该班级"
                android:textSize="16sp"
                android:textColor="@color/text_xdt"
                android:layout_gravity="center_horizontal"
                android:padding="30dp"/>
        
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/login_xdt_view_line"/>
        
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            
            <TextView
                    android:id="@+id/tvClassListCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="取消"
                    android:textSize="16sp"
                    android:textColor="@color/text_xdt"
                    android:padding="16dp"
                    android:gravity="center"/>
            
            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/login_xdt_view_line"/>
            
            <TextView
                    android:id="@+id/tvClassListConfirm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="撤回"
                    android:textSize="16sp"
                    android:textColor="@color/login_xdt_btn_color_able"
                    android:padding="16dp"
                    android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>