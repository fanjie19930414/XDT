<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_background_corner"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivNoticeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/label_homework"/>

    <ImageView
        android:id="@+id/ivHomeWorkParentTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/label_unsubmit"
        android:layout_alignParentEnd="true"
        android:paddingTop="@dimen/dp_10"
        android:paddingEnd="16dp"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civHomeWorkTeacher"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:paddingTop="10dp"
            android:paddingEnd="15dp"
            android:paddingBottom="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:id="@+id/tvHomeWorkName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_xdt"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvHomeWorkDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_xdt"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvHomeWorkTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:textColor="@color/text_xdt"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvHomeWorkContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:padding="3dp"
                android:textColor="@color/text_xdt"
                android:textSize="16sp"
                android:textStyle="normal" />

            <LinearLayout
                android:id="@+id/llHomeWorkPic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10">

                <ImageView
                    android:id="@+id/ivHomeWorkPic1"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:padding="2dp"/>

                <ImageView
                    android:id="@+id/ivHomeWorkPic2"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:visibility="invisible"
                    android:padding="2dp"/>

                <ImageView
                    android:id="@+id/ivHomeWorkPic3"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:visibility="invisible"
                    android:padding="2dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvHomeWorkTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:textColor="@color/text_xdt_hint" />

                <TextView
                    android:id="@+id/tvHomeWorkNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_xdt_hint"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/ivHomeWorkIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/prev_list_r"
                    android:layout_gravity="center_vertical"
                    android:padding="2dp"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>