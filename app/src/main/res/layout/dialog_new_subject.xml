<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_background_corner"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp">
        
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自定义课程名称"
                android:textSize="18sp"
                android:textColor="@color/text_xdt"
                android:layout_gravity="center_horizontal"
                android:padding="16dp"/>
        
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/xdt_background"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">
            
            <EditText
                    android:id="@+id/etNewSubject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入课程名称"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/text_xdt"/>
        </LinearLayout>
        
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/login_xdt_view_line"
                android:layout_marginTop="10dp"/>
        
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            
            <TextView
                    android:id="@+id/tvNewSubjectCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="取消"
                    android:textSize="16sp"
                    android:textColor="@color/text_xdt"
                    android:padding="16dp"
                    android:gravity="center"/>
            
            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/login_xdt_view_line"/>
            
            <TextView
                    android:id="@+id/tvNewSubjectConfirm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="确认"
                    android:textSize="16sp"
                    android:textColor="@color/text_xdt"
                    android:padding="16dp"
                    android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>