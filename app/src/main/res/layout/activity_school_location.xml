<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/xdt_background"
              android:orientation="vertical">
    
    <include
            android:id="@+id/view_status_bar_height"
            layout="@layout/view_status_bar"/>
    
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white">
        
        <LinearLayout
                android:id="@+id/ll_schoollocation"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@color/xdt_background"
                android:orientation="horizontal">
            
            <TextView
                    android:id="@+id/tv_school_location_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/text_xdt"
                    android:drawableEnd="@mipmap/down_arrow"
                    android:drawablePadding="5dp"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical"
                    android:padding="5dp"/>
            
            <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/text_xdt_hint"
                    android:layout_gravity="center_vertical"/>
            
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/search_icon"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:padding="5dp"/>
            
            <TextView
                    android:id="@+id/tvSearchSchoolLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:background="@null"
                    android:hint="输入学校名称进行搜索"
                    android:singleLine="true"
                    android:textColorHint="@color/text_xdt_hint"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    android:padding="5dp"/>
        </LinearLayout>
        
        <TextView
                android:id="@+id/tv_schoollocation_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textColor="@color/text_xdt"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"
                android:padding="5dp"/>
    </LinearLayout>
    
    <TextView
            android:id="@+id/tvCurrentLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前定位"
            android:textColor="@color/text_xdt_hint"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textSize="14sp"/>
    
    <LinearLayout
            android:id="@+id/llCurrentLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">
        
        <TextView
                android:id="@+id/tv_schoollocation"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/text_xdt"
                android:textSize="18sp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:layout_marginStart="16dp"
                android:drawableStart="@mipmap/icon_location"
                android:drawablePadding="5dp"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginEnd="5dp"/>
        
        <TextView
                android:id="@+id/tv_re_schoollocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="重新定位"
                android:textColor="@color/text_blue"
                android:layout_marginEnd="16dp"
                android:layout_gravity="center_vertical"/>
    </LinearLayout>
    
    <TextView
            android:id="@+id/tvNearBySchool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="附近学校"
            android:textColor="@color/text_xdt_hint"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textSize="14sp"/>
    
    <TextView
            android:id="@+id/tvHotSchool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_white"
            android:text="热门学校"
            android:textColor="@color/text_xdt"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"/>
    
    <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_schoollocation"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

</LinearLayout>