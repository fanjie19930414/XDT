<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    
    <RelativeLayout
            android:id="@+id/rl_bottomdialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_dialog_background"
            android:padding="15dp">
        
        <TextView
                android:id="@+id/tv_bottomdialog_cancel_teacherlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="取消"
                android:textColor="@color/text_xdt"
                android:textSize="16sp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>
        
        <TextView
                android:id="@+id/tv_bottomdialog_title_teacherlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/text_xdt"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="选择老师"/>
        
        <TextView
                android:id="@+id/tv_bottomdialog_confirm_teacherlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认"
                android:textColor="@color/login_xdt_btn_color_able"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
    </RelativeLayout>
    
    <android.support.v7.widget.RecyclerView
            android:id="@+id/rvTeacherList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_white"/>

</LinearLayout>