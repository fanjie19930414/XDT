<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="46dp"
              android:orientation="horizontal"
              android:layout_marginStart="16dp">
    
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
        
        <TextView
                android:id="@+id/tvSubjectTimeStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:00"
                android:textColor="@color/text_xdt_hint"
                android:textSize="12sp"/>
        
        <TextView
                android:id="@+id/tvSubjectTimeEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:45"
                android:textColor="@color/text_xdt_hint"
                android:textSize="12sp"/>
    </LinearLayout>
    
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="20dp">
        
        <View
                android:id="@+id/viewUp"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/login_xdt_view_line"
                android:layout_gravity="center_horizontal"
                android:visibility="visible"/>
        
        <View
                android:id="@+id/viewMiddle"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/shape_subject_detail_circle"/>
        
        <View
                android:id="@+id/viewDown"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/login_xdt_view_line"
                android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    
    <LinearLayout
            android:id="@+id/rlSubjectInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">
        
        <TextView
                android:id="@+id/tvSubject"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="计算机科学与技术"
                android:layout_marginStart="8dp"
                android:textColor="@color/text_xdt"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"/>
    
        <TextView
                android:id="@+id/tvSubjectTeacher"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/text_xdt"
                android:textSize="14sp"
                android:layout_marginStart="@dimen/dp_10"
                android:text="范洁"
                android:layout_gravity="center_vertical"/>
        
        <ImageView
                android:id="@+id/ivSubjectTel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_tel_nor"
                android:layout_marginEnd="8dp"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"/>
    </LinearLayout>
</LinearLayout>