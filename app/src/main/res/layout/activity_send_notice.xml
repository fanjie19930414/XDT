<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xdt_background"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rlSendNotice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_header_bar_height"
        android:background="@color/white">

        <ImageView
            android:id="@+id/ivSendNoticeBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/common_padding"
            android:paddingRight="@dimen/common_padding"
            android:src="@drawable/icon_back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSendNoticeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/text_xdt"
                android:textSize="@dimen/text_large_size"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivSendNoticeSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:padding="10dp"
            android:src="@mipmap/menu_menubar"
            android:visibility="gone" />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlSendNoticeChooseClass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/common_white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvChooseClass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="选择班级"
                    android:textColor="@color/text_xdt"
                    android:textSize="16sp" />

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/tagFlowLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/ivChooseClass"
                    android:layout_toEndOf="@id/tvChooseClass"
                    android:background="@color/white"
                    android:visibility="visible"
                    app:tag_gravity="right"
                    android:layout_centerHorizontal="true"/>

                <ImageView
                    android:id="@+id/ivChooseClass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:padding="16dp"
                    android:src="@mipmap/prev_list_r" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/xdt_background"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rlSendNoticeChooseEditTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/common_white">

                    <EditText
                        android:id="@+id/etSendNoticeChooseEditTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@id/tvSendNoticeChooseEditTitle"
                        android:background="@null"
                        android:hint="输入标题"
                        android:maxLength="20"
                        android:padding="16dp"
                        android:textColor="@color/login_xdt_et_color"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvSendNoticeChooseEditTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:padding="16dp"
                        android:text="0/20"
                        android:textColor="@color/text_xdt_hint"
                        android:textSize="@dimen/sp_16" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/xdt_background" />

                <RelativeLayout
                    android:id="@+id/rlSendNoticeChooseEditContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/common_white">

                    <EditText
                        android:id="@+id/etSendNoticeChooseEditContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入内容"
                        android:maxLength="1000"
                        android:padding="16dp"
                        android:textColor="@color/login_xdt_et_color"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvSendNoticeChooseEditContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/etSendNoticeChooseEditContent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="10dp"
                        android:padding="16dp"
                        android:text="0/1000"
                        android:textColor="@color/text_xdt_hint"
                        android:textSize="@dimen/sp_16" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlNoticeImgUpload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/common_white"
                    android:padding="16dp">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvSendNoticeImg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlSendNoticeReceipt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@color/common_white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="需要填写回执"
                        android:textColor="@color/text_xdt"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/ivNoticeReceipt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:src="@mipmap/togglebutton_off"
                        android:padding="5dp"/>
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvReceipt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btSendNotice"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/blue_button_height"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/selector_blue_button"
                    android:enabled="true"
                    android:gravity="center"
                    android:text="马上发布"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>