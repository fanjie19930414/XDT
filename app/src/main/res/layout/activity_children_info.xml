<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/xdt_background"
              android:orientation="vertical">

    <include layout="@layout/view_status_bar"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_header_bar_height"
            android:background="@color/white">

        <ImageView
                android:id="@+id/mLeftIv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/common_padding"
                android:paddingRight="@dimen/common_padding"
                android:src="@drawable/icon_back"
                android:layout_centerVertical="true"/>

        <TextView
                android:id="@+id/mTitleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/common_black"
                android:textSize="@dimen/text_large_size"/>

        <ImageView
                android:id="@+id/mRightIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/nav_menu"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:padding="5dp"/>
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp">

                <RelativeLayout
                        android:id="@+id/rlChildrenInfoIcon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/common_white"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="头像"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:textSize="16sp"
                            android:textColor="@color/text_xdt"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/civIconChildren"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@mipmap/def_head_boy"
                            app:civ_border_width="1dp"
                            app:civ_border_color="@color/common_white"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="40dp"/>

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/prev_list_r"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="16dp"/>
                </RelativeLayout>

                <include layout="@layout/view_line_magin16"/>

                <RelativeLayout
                        android:id="@+id/rlChildrenInfoName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/common_white"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="姓名"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:textSize="16sp"
                            android:textColor="@color/text_xdt"/>

                    <TextView
                            android:id="@+id/tvChildrenInfoName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="16sp"
                            android:textColor="@color/xdt_usercenter"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="40dp"
                            android:hint="请输入"
                            android:gravity="end"/>

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/prev_list_r"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="16dp"/>
                </RelativeLayout>

                <include layout="@layout/view_line_magin16"/>

                <RelativeLayout
                        android:id="@+id/rlChildrenInfoSex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/common_white"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="性别"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:textSize="16sp"
                            android:textColor="@color/text_xdt"/>

                    <TextView
                            android:id="@+id/tvChildrenInfoSex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="16sp"
                            android:textColor="@color/xdt_usercenter"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="40dp"
                            android:hint="请选择"
                            android:gravity="end"/>

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/prev_list_r"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="16dp"/>
                </RelativeLayout>

                <include layout="@layout/view_line_magin16"/>

                <RelativeLayout
                        android:id="@+id/rlChildrenInfoBirthday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/common_white"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="生日"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:textSize="16sp"
                            android:textColor="@color/text_xdt"/>

                    <TextView
                            android:id="@+id/tvChildrenInfoBirthday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="生日当天可能收到小惊喜哦~"
                            android:layout_centerVertical="true"
                            android:textSize="16sp"
                            android:textColor="@color/xdt_usercenter"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="40dp"
                            android:gravity="end"/>

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/prev_list_r"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="16dp"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/llChildrenClassInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:background="@color/common_white"
                    android:visibility="gone">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="班级信息"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"/>

                <RelativeLayout
                        android:id="@+id/rlChildrenInfoSchool"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/common_white"
                        android:layout_marginTop="20dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="学校"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:textSize="16sp"
                            android:textColor="@color/text_xdt"/>

                    <TextView
                            android:id="@+id/tvChildrenInfoSchool"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="北京二小"
                            android:layout_centerVertical="true"
                            android:textSize="16sp"
                            android:textColor="@color/xdt_usercenter"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="16dp"/>
                </RelativeLayout>

                <include layout="@layout/view_line_magin16"/>

                <RelativeLayout
                        android:id="@+id/rlChildrenInfoClass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/common_white"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="班级"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:textSize="16sp"
                            android:textColor="@color/text_xdt"/>

                    <TextView
                            android:id="@+id/tvChildrenInfoClass"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="一年级3班"
                            android:layout_centerVertical="true"
                            android:textSize="16sp"
                            android:textColor="@color/xdt_usercenter"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="16dp"/>
                </RelativeLayout>

                <include layout="@layout/view_line_magin16"/>

                <RelativeLayout
                        android:id="@+id/rlChildrenInfoTeacher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/common_white"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="班主任"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:textSize="16sp"
                            android:textColor="@color/text_xdt"/>

                    <TextView
                            android:id="@+id/tvChildrenInfoTeacher"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="16sp"
                            android:textColor="@color/xdt_usercenter"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="16dp"/>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:background="@color/common_white">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="家长信息"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"/>

                <TextView
                        android:id="@+id/tvChildrenInfoInvite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="邀请亲友"
                        android:textSize="16sp"
                        android:textColor="@color/login_xdt_btn_color_able"
                        android:layout_alignParentEnd="true"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="16dp"/>


                <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvChildrenInfoList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvChildrenInfoInvite"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="12dp"/>

            </RelativeLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>