<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/common_white">
    
    <include layout="@layout/view_status_bar"/>
    
    <com.kotlin.baselibrary.custom.HeaderBar
            android:id="@+id/HeaderBarAddClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleText="添加班级"/>
    
    <RelativeLayout
            android:id="@+id/rl_create_class"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/shape_gradient_blue"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="@dimen/dp_72">
        
        <TextView
                android:id="@+id/tv_create_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="创建班级"
                android:layout_marginStart="32dp"
                android:layout_marginTop="29dp"
                android:textSize="20sp"
                android:textColor="@color/white"/>
        
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_create_class"
                android:src="@mipmap/arrow_white_right"
                android:layout_marginStart="32dp"
                android:layout_marginTop="40dp"/>
        
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/create_blue_class"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="14dp"
                android:layout_marginTop="44dp"
                android:layout_marginBottom="4dp"
                android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    
    <RelativeLayout
            android:id="@+id/rl_join_class"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/shape_gradient_orange"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="25dp">
        
        <TextView
                android:id="@+id/tv_join_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加入班级"
                android:layout_marginStart="32dp"
                android:layout_marginTop="29dp"
                android:textSize="20sp"
                android:textColor="@color/white"/>
        
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_join_class"
                android:src="@mipmap/arrow_white_right"
                android:layout_marginStart="32dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="32dp"/>
        
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/orange_class"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="14dp"
                android:layout_marginTop="44dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    
    <RelativeLayout
            android:id="@+id/rl_exit_class"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/shape_gradient_green"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="@dimen/dp_72">
        
        <TextView
                android:id="@+id/tv_exit_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂不加入"
                android:layout_marginStart="32dp"
                android:layout_marginTop="29dp"
                android:textSize="20sp"
                android:textColor="@color/white"/>
        
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_exit_class"
                android:src="@mipmap/arrow_white_right"
                android:layout_marginStart="32dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="32dp"/>
        
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/exit_green_class"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="14dp"
                android:layout_marginTop="44dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</LinearLayout>