<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civTeacherIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/yukee"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:civ_border_color="@color/common_white"
        app:civ_border_width="1dp"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:id="@+id/tvAddressBookName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="辰宇(班主任)"
        android:textSize="16sp"
        android:textColor="@color/text_xdt"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_gravity="center_vertical"/>

    <ImageView
        android:id="@+id/ivAddressBookParentDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_tel_nor"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:padding="8dp"/>

</LinearLayout>