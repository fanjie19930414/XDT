<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/common_white">
    
    <include
            android:id="@+id/view_status_bar_height"
            layout="@layout/view_status_bar"/>
    
    <com.kotlin.baselibrary.custom.HeaderBar
            android:id="@+id/headerBarClassList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleText="班级"
            app:isShowBack="false"/>
    
    <TextView
            android:id="@+id/tvMyClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的班级"
            android:textColor="@color/text_xdt"
            android:paddingStart="16dp"
            android:paddingTop="10dp"
            android:textSize="14sp"
            android:visibility="gone"/>
    
    <android.support.v7.widget.RecyclerView
            android:id="@+id/rvClassListParent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>