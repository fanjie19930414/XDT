<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/xdt_background">

    <include layout="@layout/view_status_bar"/>

    <com.kotlin.baselibrary.custom.HeaderBar
        android:id="@+id/suggestHeaderBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="设置常用评语"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:padding="16dp"
        android:layout_marginTop="12dp">

        <EditText
            android:id="@+id/etCommentItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="top"
            android:hint="点击输入内容"
            android:maxLength="20"
            android:textSize="14sp"
            android:textColor="@color/text_xdt"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/tvCommentLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/etCommentItem"
            android:text="0/20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:textColor="@color/text_xdt_hint"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btSaveComment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/blue_button_height"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_blue_button"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:enabled="false"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

</LinearLayout>