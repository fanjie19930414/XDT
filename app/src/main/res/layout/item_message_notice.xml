<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:padding="10dp"
    android:background="@drawable/shape_background_corner">

    <com.kotlin.baselibrary.custom.CustomRoundAngleImageView
        android:id="@+id/civMessageNotice"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:src="@mipmap/xdt_logo"
        android:layout_marginStart="12dp"/>

    <RelativeLayout
        android:id="@+id/rlMessageNotice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/civMessageNotice"
        android:layout_marginStart="8dp"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/tvMessageTitleNotice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/text_xdt"
            android:layout_marginBottom="6dp"
            android:gravity="start"
            android:maxLines="2"
            android:ellipsize="end"
            android:paddingStart="6dp" />

        <TextView
            android:id="@+id/tvMessageDescNotice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:layout_below="@id/tvMessageTitleNotice"
            android:paddingStart="6dp" />

        <TextView
            android:id="@+id/tvMessageTimeNotice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textSize="12sp"
            android:textColor="@color/text_xdt_hint"
            android:padding="6dp">
        </TextView>
    </RelativeLayout>
</RelativeLayout>