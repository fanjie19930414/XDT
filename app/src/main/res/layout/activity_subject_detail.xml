<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/common_white">
    
    <include
            android:id="@+id/view_status_bar_height"
            layout="@layout/view_status_bar"/>
    
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        
        <TextView
                android:id="@+id/tvSubjectDetailDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019年7月"
                android:textColor="@color/text_xdt"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:layout_centerVertical="true"/>
        
        <ImageView
                android:id="@+id/ivSubjectDetailFinish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/pop_right_del"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:padding="5dp"/>
    </RelativeLayout>
    
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
            
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="一"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
            
            <LinearLayout
                    android:id="@+id/llMonday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="5dp">
                
                <TextView
                        android:id="@+id/tv1day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                
                <TextView
                        android:id="@+id/tv1dayUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="课"/>
            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
            
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="二"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
            
            <LinearLayout
                    android:id="@+id/llTuesDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="5dp">
                
                <TextView
                        android:id="@+id/tv2day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                
                <TextView
                        android:id="@+id/tv2dayUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="课"/>
            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
            
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="三"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
            
            <LinearLayout
                    android:id="@+id/llWednesday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="5dp">
                
                <TextView
                        android:id="@+id/tv3day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                
                <TextView
                        android:id="@+id/tv3dayUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="课"/>
            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
            
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="四"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
            
            <LinearLayout
                    android:id="@+id/llThursday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="5dp">
                
                <TextView
                        android:id="@+id/tv4day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                
                <TextView
                        android:id="@+id/tv4dayUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="课"/>
            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
            
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="五"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
            
            <LinearLayout
                    android:id="@+id/llFriday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="5dp">
                
                <TextView
                        android:id="@+id/tv5day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                
                <TextView
                        android:id="@+id/tv5dayUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="课"/>
            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
            
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="六"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
            
            <LinearLayout
                    android:id="@+id/llSaturday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="5dp">
                
                <TextView
                        android:id="@+id/tv6day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                
                <TextView
                        android:id="@+id/tv6dayUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="休"/>
            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
            
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
            
            <LinearLayout
                    android:id="@+id/llSunday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="5dp">
                
                <TextView
                        android:id="@+id/tv7day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                
                <TextView
                        android:id="@+id/tv7dayUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="休"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
            android:id="@+id/llSubjectDetailMorning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
        
        <TextView
                android:id="@+id/tvMorning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上午"
                android:layout_marginStart="16dp"
                android:textSize="16sp"
                android:textColor="@color/text_xdt"
                android:textStyle="bold"
                android:visibility="gone"/>
        
        <android.support.v7.widget.RecyclerView
                android:id="@+id/rvSubjectDetailMorning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>
    </LinearLayout>
    
    <LinearLayout
            android:id="@+id/llSubjectDetailNoon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">
        
        <TextView
                android:id="@+id/tvNoon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下午"
                android:layout_marginStart="16dp"
                android:textSize="16sp"
                android:textColor="@color/text_xdt"
                android:textStyle="bold"
                android:visibility="gone"/>
        
        <android.support.v7.widget.RecyclerView
                android:id="@+id/rvSubjectDetailNoon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>
    </LinearLayout>

</LinearLayout>