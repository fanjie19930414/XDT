<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/xdt_background">
    
    <include
            android:id="@+id/state_bar"
            layout="@layout/view_status_bar"/>
    
    <RelativeLayout
            android:id="@+id/rlClassInfo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_header_bar_height"
            android:background="@color/white">
        
        <ImageView
                android:id="@+id/ivClassInfoBackTeacher"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/common_padding"
                android:paddingRight="@dimen/common_padding"
                android:src="@drawable/icon_back"
                android:layout_centerVertical="true"/>
        
        <LinearLayout
                android:id="@+id/llClassInfoTitleTeacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true">
            
            <TextView
                    android:id="@+id/tvClassInfoTitleTeacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_xdt"
                    android:textSize="@dimen/text_large_size"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"/>
        </LinearLayout>
        
        <ImageView
                android:id="@+id/ivClassInfoSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/menu_menubar"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:padding="10dp"/>
    </RelativeLayout>
    
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/common_white">
        
        <TextView
                android:layout_marginStart="16dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="班级头像"
                android:textSize="16sp"
                android:textColor="@color/text_xdt"/>
        
        <com.kotlin.baselibrary.custom.CustomRoundAngleImageView
                android:id="@+id/ivClassInfoTeacher"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:scaleType="fitCenter"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"/>
    </RelativeLayout>
    
    
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:background="@color/common_white">
        
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            
            <TextView
                    android:layout_marginStart="16dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="班级名称"
                    android:textSize="16sp"
                    android:textColor="@color/text_xdt"/>
            
            <TextView
                    android:id="@+id/tvClassInfoName"
                    android:layout_marginEnd="16dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/xdt_usercenter"
                    android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/xdt_background"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>
        
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            
            <TextView
                    android:layout_marginStart="16dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="班级年级"
                    android:textSize="16sp"
                    android:textColor="@color/text_xdt"/>
            
            <TextView
                    android:id="@+id/tvClassInfoGrade"
                    android:layout_marginEnd="16dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/xdt_usercenter"
                    android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/xdt_background"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>
        
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            
            <TextView
                    android:layout_marginStart="16dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="入学年份"
                    android:textSize="16sp"
                    android:textColor="@color/text_xdt"/>
            
            <TextView
                    android:id="@+id/tvClassInfoYear"
                    android:layout_marginEnd="16dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/xdt_usercenter"
                    android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/xdt_background"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>
        
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            
            <TextView
                    android:layout_marginStart="16dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所属学校"
                    android:textSize="16sp"
                    android:textColor="@color/text_xdt"/>
            
            <TextView
                    android:id="@+id/tvClassInfoSchool"
                    android:layout_marginEnd="16dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/xdt_usercenter"
                    android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/xdt_background"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>
        
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            
            <TextView
                    android:layout_marginStart="16dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="班主任"
                    android:textSize="16sp"
                    android:textColor="@color/text_xdt"/>
            
            <TextView
                    android:id="@+id/tvClassInfoHeaderTeacher"
                    android:layout_marginEnd="16dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/xdt_usercenter"
                    android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>
    
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/common_white">
        
        <TextView
                android:id="@+id/tvClassSubject"
                android:layout_marginStart="16dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="教学课程"
                android:textSize="16sp"
                android:textColor="@color/text_xdt"/>
        
        <TextView
                android:id="@+id/tvClassInfoSubject"
                android:layout_toEndOf="@id/tvClassSubject"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_marginEnd="16dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="16sp"
                android:textColor="@color/xdt_usercenter"
                android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>